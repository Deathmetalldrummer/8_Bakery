mixin block_1()
	.block1
		.block1__.block1__left
			+artOfCakes()
		.block1__.block1__right
			+tastesSoGood()


mixin tastesSoGood()
	.tastesSoGood
		.tastesSoGood__
			+adaptiveSquare().tastesSoGood__adaptiveSquare
				.tastesSoGood__image
					img(src="./pictures/art_of_cakes_img1.png", alt="")
		.tastesSoGood__
			+adaptiveSquare().tastesSoGood__adaptiveSquare
				.tastesSoGood__image
					img(src="./pictures/art_of_cakes_img2.png", alt="")
		.tastesSoGood__
			+adaptiveSquare().tastesSoGood__adaptiveSquare
				.tastesSoGood__image
					img(src="./pictures/art_of_cakes_img3.png", alt="")
		.tastesSoGood__
			+adaptiveSquare().tastesSoGood__adaptiveSquare
				.tastesSoGood__image
					img(src="./pictures/art_of_cakes_img4.png", alt="")
		+adaptiveSquare().tastesSoGood__text
			.tastesSoGood__textContent
				+tastesSoGoodSvg()
				.tastesSoGood__textContentText TASTES SO GOOD!


mixin chefCook()
	.chefCook
		.chefCook__title Chef Cook
		.chefCook__author
			.chefCook__authorFirtName Benito
			img(src="./pictures/avatar.png", alt="").chefCook__authorAvatar
			.chefCook__authorlastName Gaspare
		bloquote.chefCook__cite Unique creations for unique
			br
			| occasions.


mixin artOfCakes()
	.artOfCakes__header
		+blockHeader("Art of cakes","we create delicious memories")
	.artOfCakes__desc Quisque rutrum. Aenean imperdiet. Etiam ultricies nisi vel augue. Curabitur ullamcorper ultricies nisi. Nam eget dui. Etiam rhoncus. Maecenas tempus, tellus eget condimentum rhoncus, sem quam semper libero, sit amet adipiscing sem neque sed.
	.artOfCakes__chefCook
		+chefCook()
